<% if current_user %>
  <h2>Hello <%= current_user.name %></h2>
  <p>
    AJAX
    <br>
    <%= link_to "Logout", logout_path, method: :delete, confirm: 'Logout?', remote: true %>
  </p>
  <p>
    Non AJAX
    <br>
    <%= render "logout_form" %>
    </p>
<% else %>
  <%= render "login_form" %>
<% end %>



<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <% if user %>
          <tr>
            <% cache(user) do %>
              <td><%= link_to user.name, user_path(user) %></td>
            <% end %>
            <td>
            </td>
          </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
